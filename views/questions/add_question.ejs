<%- include ../layouts/header.ejs %>
  <div class="container-fluid" style="margin-left: 0px;margin-right: 0px; padding-left: 0px; padding-right: 0px;">
    <div class="panel panel-default">
      <div class="panel-heading"><h3>Add Questions</h3></div>
      <div class="panel-body">
        <form action="/questions/add_question" method="POST">
          <div style=" padding-left: 5px;">Q)&nbsp;<%= q_id[0].question %><br/></div>
          <div  style=" padding-left: 5px;margin-bottom: 10px;">A)&nbsp;<%= q_id[0].answer %></div>
            <div >              
              <input type="text" name="Question_1" class="form-control" placeholder="Add Question1 " style="margin-bottom: 10px;">
              <input type="text" name="Question_2" class="form-control" placeholder="Add Question2 " style="margin-bottom: 10px;">
              <input type="text" name="Question_3" class="form-control" placeholder="Add Question3" style="margin-bottom: 10px;">
              <input type="text" name="Question_4" class="form-control" placeholder="Add Question4" style="margin-bottom: 10px;">
              <input type="hidden" name="question_id" class="form-control" value="<%= q_id[0].id %>" style="margin-bottom: 10px; " >
            </div>
            <div >
              <label for="chkPassport">
                <input type="checkbox" id="chkPassport" />Extra Fields
              </label><br/>            
              <div id="dvPassport" style="display: none"> 
                  <div class="" style="margin-bottom:10px; float: right;"> 
                      <button class="btn btn-success btn-sm add-more" type="button"><i class="glyphicon glyphicon-plus"></i> Add</button>
                    </div>
                <div class="after-add-more">                               
                <div class="input-group control-group col-sm-12 " style=" margin-bottom:30px;">  
                  <input type="text" name="question[0]" class="form-control" placeholder="Add Question" style=" margin-bottom:10px ">
                  <input type="text" name="answer[0]" class="form-control" placeholder="Add Answer">
                  <input type="text" name="actions[0]" class="form-control" placeholder="Add context action" style=" margin-bottom:10px ">
                </div> 
               </div>
            </div><br/>
            <div class="container-floud">
              <button value="submit" name="submit" type="submit">Submit </button>
            </div>
        </form>
    </div>
  </div>
</div>

<%- include ../layouts/footer.ejs %>

<script type="text/javascript">


    $(document).ready(function() {
          var next = 1;
          $(".add-more").click(function(e){
              var fieldHTML = '<div id="button_'+ next +'"> <div class="input-group control-group"><input type="text" name="question[' + next + ']"  class="form-control" placeholder="Add Question" style=""><input type="text" name="answer[' + next + ']"  class="form-control" placeholder="Add Answer" style=" margin-bottom:10px "><input type="text" name="actions[' + next + ']"  class="form-control" placeholder="action name" style=" margin-bottom:10px "> <div class="input-group-btn"> <button id="button_' + next + '" class="btn btn-danger btn-sm remove-more" type="button" style="margin-left:0px;">-</button> </div></div></div>';
              $('.after-add-more').append(fieldHTML)
              next +=1;
              $(".remove-more").click(function(e){
                  var id = this.id;
                  var fieldID = "#" + id;
                  $(fieldID).remove();
              });   
          });  

      $("body").on("click",".remove",function(){ 
        $(this).parents(".control-group").remove();
      });
    });

    
  
    $(function () {
        $("#chkPassport").click(function () {
            if ($(this).is(":checked")) {
                $("#dvPassport").show();
            } else {
                $("#dvPassport").hide();
            }
        });
    });
                 


</script>